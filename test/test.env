# Test environment configuration
NODE_ENV=test
PORT=3001

# Redis (use different DB for tests)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Disable external services for tests
ENABLE_INTRALEDGER_POLLING=false
ENABLE_WEBSOCKET_NOTIFICATIONS=false

# RabbitMQ
RABBITMQ_URL=amqp://localhost:5672

# Security (test values)
JWT_SECRET=test_jwt_secret_min_32_chars_for_testing_only
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

ENCRYPTION_KEY=test_encryption_key_min_32_chars_for_testing
ENCRYPTION_SALT=test_salt_16char
HASH_SALT=test_hash_16char

SESSION_SECRET=test_session_secret_min_32_chars_for_testing
SESSION_EXPIRES_IN=86400
SESSION_ROTATION_INTERVAL=3600

WEBHOOK_SECRET=test_webhook_secret_min_32_chars_for_testing
WEBHOOK_TOLERANCE=300

OTP_LENGTH=6
OTP_EXPIRES_IN=300
OTP_MAX_ATTEMPTS=3
MFA_TIMEOUT_SECONDS=300

# Admin numbers for tests
ADMIN_PHONE_NUMBERS=1234567890

# Logging
LOG_LEVEL=error