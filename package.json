{
  "name": "flash-whatsapp-service",
  "version": "0.1.0",
  "description": "Flash WhatsApp Service - WhatsApp integration for Flash Bitcoin wallet",
  "main": "dist/main.js",
  "private": true,
  "license": "UNLICENSED",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "nest build",
    "build:prod": "NODE_ENV=production nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "dev:clean": "rm -rf dist && nest start --watch",
    "start:dev:nodemon": "nodemon dist/main.js",
    "start:dev:pm2": "pm2 start ecosystem.config.js",
    "stop:dev:pm2": "pm2 stop flash-whatsapp-dev",
    "logs:pm2": "pm2 logs flash-whatsapp-dev",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:dev:nodemon\"",
    "build:watch": "nest build --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:cov": "jest --config jest.config.js --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles --forceExit",
    "ai:train": "ts-node scripts/manage-ai-training.ts",
    "ai:add": "ts-node scripts/manage-ai-training.ts add",
    "ai:test": "ts-node scripts/manage-ai-training.ts test",
    "ai:list": "ts-node scripts/manage-ai-training.ts list"
  },
  "keywords": [
    "flash",
    "whatsapp",
    "bitcoin",
    "payments",
    "caribbean",
    "jamaica",
    "twilio"
  ],
  "author": "Flash Engineering Team",
  "dependencies": {
    "@google-cloud/speech": "^7.1.0",
    "@google-cloud/text-to-speech": "^6.1.0",
    "@google/generative-ai": "^0.24.1",
    "@nestjs/common": "^11.1.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.0",
    "@nestjs/swagger": "^11.2.0",
    "@types/passport-jwt": "^4.0.1",
    "amqplib": "^0.10.7",
    "axios": "^1.10.0",
    "bolt11": "^1.4.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "google-tts-api": "^2.0.2",
    "graphql-ws": "^6.0.5",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prom-client": "^15.1.3",
    "puppeteer": "^24.10.2",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.7.1",
    "whatsapp-web.js": "^1.30.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/testing": "^11.1.0",
    "@types/amqplib": "^0.10.7",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@types/qrcode": "^1.5.5",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "pm2": "^6.0.8",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "tar-fs": "^3.0.0",
    "puppeteer-core": {
      "ws": "^8.18.0"
    }
  }
}
