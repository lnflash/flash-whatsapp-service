# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Twilio WhatsApp Settings
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=your_twilio_whatsapp_number
TWILIO_WEBHOOK_AUTH_TOKEN=your_webhook_auth_token

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Flash API Configuration
FLASH_API_URL=https://api.flashapp.io/graphql
FLASH_API_KEY=your_flash_api_key
FLASH_API_SECRET=your_flash_api_secret

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_QUEUE_NAME=flash_whatsapp_events

# Maple AI Configuration
MAPLE_AI_API_URL=https://api.trymaple.ai/
MAPLE_AI_API_KEY=your_maple_ai_api_key

# Security
JWT_SECRET=your_jwt_secret
SESSION_EXPIRY=86400 # 24 hours in seconds
MFA_EXPIRY=300 # 5 minutes in seconds

# Caching
BALANCE_CACHE_TTL=300 # 5 minutes in seconds

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000 # 1 minute
RATE_LIMIT_MAX=10 # 10 requests per minute

# Logging
LOG_LEVEL=info